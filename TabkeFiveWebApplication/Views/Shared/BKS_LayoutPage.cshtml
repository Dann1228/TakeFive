<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TakeFive</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)

    <link rel="icon" href="~/Images/TestLogo.png" type="image/x-icon" />
    <link href="~/Content/themes/base/accordion.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
</head>
<body style="background-image: url('http://www.ryuoo.com/summer/images/event/1493429312-1.jpg');">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <marquee>@Html.ActionLink("TakeFive後臺管理", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</marquee>
            </div>
        </div>
    </div>
    <div class="col-lg-2" style="width:15%;background-color:darkgray;margin-top:5px">
        <div id="accordion" style="width:285px;margin-left:-13px">
            <h3>會員異動</h3>
            <div>
                <ul style="list-style:none">
                    @*<li class="list-group-item" style="margin-left:-60px">@Html.ActionLink("新增學員", "Create", "AspNetUsers")</li>*@
                    <li class="list-group-item" style="margin-left:-60px">@Html.ActionLink("會員資料總覽", "Index", "SampleUser")</li>
                </ul>
            </div>
            <h3>影片區</h3>
            <div>
                <ul>
                    <li class="list-group-item" style="margin-left:-60px">@Html.ActionLink("影片上架", "Create", "producttbls")</li>
                    <li class="list-group-item" style="margin-left:-60px">@Html.ActionLink("影片管理", "Index", "producttbls")</li>
                </ul>
            </div>
            <h3>訂單管理</h3>
            <div>
                <ul>
                    <li class="list-group-item" style="margin-left:-60px">@Html.ActionLink("訂單總覽", "Index", "paymenttbls")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-10" style="background-color:aliceblue;width:85%;margin:0%">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popover")
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            $("#accordion").accordion();
        });
    </script>
</body>


</html>