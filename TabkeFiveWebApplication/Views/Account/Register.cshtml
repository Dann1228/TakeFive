@model TabkeFiveWebApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "註冊";
}
@section Styles
    {
    <style>
        #loginForm {
            width: 1000px;
            height: 100px;
            margin: 0 auto
        }


        .baslik {
            color: #fff;
            text-align: center;
            font-family: 'Fira Sans', sans-serif;
        }

        .arkalogin {
            width: 550px;
            text-align: center;
            background: #fff;
            height: 1000px;
            padding: 10px;
            margin: 50px auto;
            border-radius: 10px;
            box-shadow: 8px 10px 0px rgba(0,0,0,0.1);
        }

        .loginbaslik {
            color: #888888;
            text-align: left;
            font-size: 19px;
            margin-top: 15px;
        }

        #aaa {
            background: #DE6262; /* fallback for old browsers */
            background: -webkit-linear-gradient(to bottom, #FFB88C, #DE6262); /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to bottom, #FFB88C, #DE6262); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            float: left;
            height: 800px;
            width: 100%;
            padding: 50px 0;
        }
    </style>

}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section style="height: 130vh;" id="aaa">
        <div class="arkalogin">
            <div class="loginbaslik">註冊</div>
            <hr style="border: 1px solid #ccc;">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @value = "", @id = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @value = "", @id = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @value = "", @id = "passwordfor" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @value = "", @id = "name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Birthday, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", @value = "", @id = "birthday" })
                    @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.phNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.phNumber, new { @class = "form-control", @value = "", @id = "phNumber" })
                    @Html.ValidationMessageFor(m => m.phNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Introductions, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Introductions, new { @class = "form-control", @value = "", @id = "Introductions" })
                    @Html.ValidationMessageFor(m => m.Introductions, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Pic, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <img id="imgPreview" src="@Url.Content("~/Images/NO Image Available.jpg")" style="width:320px;height:240px" />
                    <input type="file" name="File1" id="File1" accept="image/*" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="註冊" />
                    <input type="button" class="btn btn-danger" id="demo" value="DEMO" />
                </div>
            </div>
        </div>



    </section>



}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#File1").change(function () {
            readURL(this)
        });

        $(document).ready(function () {
            $("#demo").click(function () {
                $("#email").val("aaa@gmail.com")
                $("#password").val("IVEive123#")
                $("#passwordfor").val("IVEive123#")
                $("#name").val("王小二")
                $("#birthday").val("790915")
                $("#phNumber").val("0966445558")
                $("#Introductions").val("各位評審老師好我是王小二我有一個爸爸、一個媽媽一個哥哥、一個妹妹，家中排行老二，家住在台北市。爸爸在台電上班，媽媽在中油上班，哥哥在證券公司上班，妹妹還在國中唸書。我曾經就讀小松國小、大松國中，目前是松三高中三年級的學生。")

            });
        });
    </script>

}
